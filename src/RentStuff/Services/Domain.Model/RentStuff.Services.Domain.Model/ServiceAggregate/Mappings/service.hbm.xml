<?xml version="1.0"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
assembly="RentStuff.Services.Domain.Model" namespace="RentStuff.Services.Domain.Model.ServiceAggregate">
  <class name="Service" table="service" lazy="false">
    <id name="Id">
      <column name="id"/>
      <generator class="assigned" />
    </id>
    <property name="Name"/>
    <property name="Description"/>
    <property name="Location"/>
    <property name="MobileNumber" column="mobile_number"/>
    <property name="ServiceEmail" column="service_email"/>
    <property name="UploaderEmail" column="uploader_email"/>
    <property name="ServiceProfessionType" column="service_profession_type"/>
    <property name="ServiceEntityType" column="service_entity_type"/>
    <property name="Latitude"/>
    <property name="Longitude"/>
    <property name="DateEstablished" column="date_established"/>
    <property name="SecondaryMobileNumber" column="secondary_mobile_number"/>
    <property name="LandlinePhoneNumber" column="landline_phone_number"/>
    <property name="Fax"/>
    <property name="FacebookLink" column="facebook_link"/>
    <property name="InstagramLink" column="instagram_link"/>
    <property name="TwitterLink" column="twitter_link"/>
    <property name="WebsiteLink" column="website_link"/>
    <property name="DatePosted" column="date_posted"/>
    <property name="LastUpdated" column="last_updated"/>
    <idbag name="Images" table="serviceimages" lazy="false">
      <collection-id column="ID" type="Int64">
        <generator class="native"/>
      </collection-id>
      <key column="service_id" />
      <element column="image_id" type="string" />
    </idbag>

    <bag name="Reviews" table="review" lazy="true" inverse="true" cascade="all-delete-orphan">
      <key column="service_id" />
      <one-to-many class="Review" />
    </bag>
    <!--<many-to-one name="Location" unique="true" column="location_id"/>-->
  </class>
</hibernate-mapping>